{
  "extends": [
    "tslint:latest"
  ],
  "cliOptions": {
    "exclude": [
      "mocks"
    ]
  },
  "rules": {
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "no-submodule-imports": false,       
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-var-keyword": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "arrow-parens": false,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "no-console": [
      false,
      "log",
      "error"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "max-classes-per-file": [
      true,
      5
    ],
    "object-literal-sort-keys": false,
    "max-line-length": [
      true,
      270
    ],
    "trailing-comma": [false, {"multiline": "never", "singleline": "never"}],
    "no-bitwise": false,
    "curly": [true, "ignore-same-line"]
  }
}