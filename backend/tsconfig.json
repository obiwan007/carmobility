{
  "compilerOptions": {
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "types": [
      "jest"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
